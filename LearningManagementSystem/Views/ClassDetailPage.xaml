<Page
    x:Class="LearningManagementSystem.Views.ClassDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearningManagementSystem"
    xmlns:vm="using:LearningManagementSystem.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Left" Margin="20">
        <TextBlock Text="{Binding DepartmentName}" FontSize="30" FontWeight="Bold" Margin="0,10,0,10"/>
        <TextBlock Text="{Binding ClassTitle}" FontSize="25" Margin="0,10,0,10"/>
        <ItemsControl ItemsSource="{Binding Teachers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:Teacher">
                    <TextBlock Text="{Binding TeacherName}" FontSize="20" Margin="0,5,0,5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Page>
