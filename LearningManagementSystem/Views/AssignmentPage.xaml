                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>-->


                <table:TableView x:Name="tableTeacherView"
                                         Margin="16"
                                         ItemsSource="{x:Bind AssignmentViewModel.Submissions}"
                                         ShowExportOptions="True"
HeaderTemplate="{StaticResource BackgroundGlyphDefaultTemplate}"
HeaderRowHeight="{StaticResource AnnotatedScrollBarTooltipMaxWidth}"
                                         AutoGenerateColumns="False">

                    <table:TableView.Columns>
                        <table:TableViewTextColumn Header="Id" 
                                   Binding="{Binding Student.StudentCode, Mode=OneWay}" >
                        </table:TableViewTextColumn>
                        <table:TableViewTextColumn Header="Student Name"
                                       Binding="{Binding Student.StudentName, Mode=OneWay}"/>
                        <table:TableViewTextColumn Header="Submission Date"
                                   Binding="{Binding Submission.SubmissionDate, Mode=OneWay}" />
                        <table:TableViewTextColumn Header="File Name"
                                   Binding="{Binding Submission.FileName, Mode=OneWay}" />



                        <table:TableViewNumberColumn Header="Grade" Binding="{Binding Submission.Grade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <table:TableViewTemplateColumn Header="Actions">
                            <table:TableViewTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="vm:SubmissionViewModel">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Download" Command="{Binding DownloadCommand}" Foreground="Aquamarine" Background="Orange" />
                                        <Button Content="Grade" Command="{Binding GradeCommand}" Foreground="White" Background="Green"/>
                                    </StackPanel>
                                </DataTemplate>
                            </table:TableViewTemplateColumn.CellTemplate>
                        </table:TableViewTemplateColumn>


                    </table:TableView.Columns>

                </table:TableView>
            </StackPanel>

            <!-- Student View -->
            <StackPanel x:Name="StudentView" 
                    Visibility="{x:Bind AssignmentViewModel.IsStudent, 
                                   Mode=OneWay,
                                   Converter={StaticResource BooleanToVisibilityConverter}}">

                <StackPanel Orientation="Horizontal" 
                        Visibility="{x:Bind AssignmentViewModel.SubmitVisibility,
                                    Mode=OneWay,
                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Submit your assignment:" FontWeight="Bold" Foreground="Gray" FontStyle="Italic" Margin="10,0,30,20"/>
                    <Button Content="Submit" Command="{x:Bind AssignmentViewModel.SubmitCommand}" 
                        BorderBrush="Black" Background="Orange" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,0,30,20" Padding="10,5,10,5"/>
                </StackPanel>

                <table:TableView x:Name="tableView"
                         Margin="16"
                         ItemsSource="{x:Bind AssignmentViewModel.Submissions}"
                         Background="Black"
                         ShowExportOptions="True"
                         HeaderRowHeight="{StaticResource HubHeaderThemeFontSize}"
                         HeaderTemplate="{StaticResource BackgroundImageDefaultTemplate}"

                         AutoGenerateColumns="False">

                    <table:TableView.Columns>
                        <table:TableViewTextColumn Header="Id" 
                                           Binding="{Binding Student.StudentCode, Mode=OneWay}" >
                        </table:TableViewTextColumn>
                        <table:TableViewTextColumn Header="Student Name"
                                               Binding="{Binding Student.StudentName, Mode=OneWay}"/>
                        <table:TableViewTextColumn Header="Submission Date"
                                           Binding="{Binding Submission.SubmissionDate, Mode=OneWay}" />
                        <table:TableViewTextColumn Header="File Name"
                                           Binding="{Binding Submission.FileName, Mode=OneWay}" />

                        <table:TableViewNumberColumn Header="Grade" Binding="{Binding Submission.Grade, Mode=OneWay}"/>

                        <table:TableViewTemplateColumn Header="Actions">
                            <table:TableViewTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="vm:SubmissionViewModel">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Download" Command="{Binding DownloadCommand}" Foreground="Aquamarine" Background="Orange" />
                                        <Button Content="Update" Command="{Binding UpdateCommand}" Foreground="BlanchedAlmond" Background="Blue"/>
                                        <Button Content="Delete" Command="{Binding DeleteCommand}" Foreground="DarkRed" Background="Red"/>
                                    </StackPanel>
                                </DataTemplate>
                            </table:TableViewTemplateColumn.CellTemplate>
                        </table:TableViewTemplateColumn>
                    </table:TableView.Columns>

                </table:TableView>

