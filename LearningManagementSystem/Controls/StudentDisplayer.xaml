<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LearningManagementSystem.Controls.StudentDisplayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearningManagementSystem.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:LearningManagementSystem.Models"
    d:DataContext="{d:DesignInstance Type=models:StudentVer2}"
    mc:Ignorable="d">

    <Grid>
        <controls:DataGrid
                Grid.Row="1"
                x:Name="myData"
                Margin="12"
                AutoGenerateColumns="False"
                ItemsSource="{x:Bind ContextProvider.ManagingStudents, Mode=OneWay}">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <controls:DataGridTextColumn Header="Name" Binding="{Binding StudentCode}" />
                <controls:DataGridTextColumn Header="Age" Binding="{Binding StudentName}" />
                <controls:DataGridTextColumn Header="Enrolled Year" Binding="{Binding EnrollmentYear}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</UserControl>
